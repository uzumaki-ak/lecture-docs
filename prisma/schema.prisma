// ========================================
// FILE: prisma/schema.prisma
// Purpose: Database schema definition for PostgreSQL
// Run: npx prisma generate && npx prisma db push
// ========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  avatar        String?
  clerkId       String?   @unique
  passwordHash  String?
  role          String    @default("user")
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  projects      Project[]
  chatMessages  ChatMessage[]
  
  @@index([email])
  @@index([clerkId])
}

// Project model - represents a course/module/lecture
model Project {
  id            String    @id @default(uuid())
  name          String
  slug          String    @unique
  description   String?
  
  // Organization
  courseName    String?
  moduleName    String?
  lectureName   String?
  
  // Content
  readmeContent String?   @db.Text
  folderTree    Json?
  
  // Metadata
  language      String    @default("markdown")
  tags          String[]
  
  // Ownership
  userId        String?
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastAccessedAt DateTime @default(now())
  
  // Relations
  versions      ProjectVersion[]
  chatMessages  ChatMessage[]
  chunks        Chunk[]
  jobs          Job[]
  files         File[]
  
  @@index([slug])
  @@index([userId])
  @@index([courseName, moduleName, lectureName])
  @@index([createdAt])
}

// Project version - tracks README regenerations
model ProjectVersion {
  id            String    @id @default(uuid())
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  version       Int
  content       String    @db.Text
  metadata      Json?
  
  createdAt     DateTime  @default(now())
  createdBy     String?
  
  @@index([projectId])
  @@index([createdAt])
}

// File uploads associated with projects
model File {
  id            String    @id @default(uuid())
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  filename      String
  originalName  String
  fileType      String
  filePath      String
  fileSize      Int
  mimeType      String?
  
  // Processing metadata
  isProcessed   Boolean   @default(false)
  extractedText String?   @db.Text
  ocrConfidence Float?
  
  createdAt     DateTime  @default(now())
  
  @@index([projectId])
  @@index([fileType])
}

// Text chunks for RAG
model Chunk {
  id            String    @id @default(uuid())
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  content       String    @db.Text
  chunkIndex    Int
  
  // Metadata
  sourceFile    String?
  sourceType    String?   // handwritten, printed, code, audio, etc.
  startToken    Int?
  endToken      Int?
  
  // For code chunks
  language      String?
  isCodeBlock   Boolean   @default(false)
  
  // Vector embedding (stored in Chroma, referenced here)
  embeddingId   String?   @unique
  
  createdAt     DateTime  @default(now())
  
  @@index([projectId])
  @@index([chunkIndex])
  @@index([embeddingId])
}

// Chat messages for per-project chatbot
model ChatMessage {
  id            String    @id @default(uuid())
  projectId     String
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  userId        String?
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  role          String    // user, assistant, system
  content       String    @db.Text
  
  // RAG context
  retrievedChunks Json?
  llmProvider   String?
  llmModel      String?
  
  // Metadata
  tokens        Int?
  latencyMs     Int?
  
  createdAt     DateTime  @default(now())
  
  @@index([projectId])
  @@index([userId])
  @@index([createdAt])
}

// Background job queue
model Job {
  id            String    @id @default(uuid())
  projectId     String?
  project       Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  type          String    // upload, process, regenerate
  status        String    @default("pending") // pending, processing, completed, failed
  
  // Input
  inputData     Json?
  
  // Output
  result        Json?
  error         String?   @db.Text
  
  // Progress tracking
  progress      Int       @default(0) // 0-100
  currentStep   String?
  
  // Timing
  startedAt     DateTime?
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  
  // Retry logic
  attempts      Int       @default(0)
  maxAttempts   Int       @default(3)
  
  @@index([status])
  @@index([createdAt])
  @@index([projectId])
}

// API usage tracking for rate limiting
model ApiUsage {
  id            String    @id @default(uuid())
  identifier    String    // user_id or IP address
  endpoint      String
  count         Int       @default(1)
  windowStart   DateTime  @default(now())
  
  @@index([identifier, endpoint, windowStart])
}

// System settings and feature flags
model SystemSetting {
  id            String    @id @default(uuid())
  key           String    @unique
  value         String    @db.Text
  description   String?
  updatedAt     DateTime  @updatedAt
  
  @@index([key])
}